{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@store/*": ["store/*"],
    },
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "setupTests.ts"],
  "exclude": ["node_modules", "dist"]
}
